<div class="h2 text-center">
  <h2>List of Restaurants🍽</h2>
</div>
<hr>

<div class="grid text-center">
  <% @restaurants.each do |restaurant| %>
    <div class="g-col-4">
      <p> ✨<%= link_to restaurant.name, restaurant_path(restaurant) %>✨ <%= link_to "Add a review", new_restaurant_review_path(restaurant) %></p>
    </div>
  <% end %>
</div>
